<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ifc.mikel.instanfunclone.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bazinga"
        android:id="@+id/buttonBazinga"
        android:onClick="playBazinga"
        android:layout_margin="16dp"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gaaaay"
        android:id="@+id/buttonGay"
        android:onClick="playGay"
        android:layout_margin="16dp"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ha ha"
        android:id="@+id/buttonHaha"
        android:onClick="playHaha"
        android:layout_margin="16dp"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hadouken"
        android:id="@+id/buttonHadouken"
        android:onClick="playHadouken"
        android:layout_margin="16dp"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="It's a trap"
        android:id="@+id/buttonItsatrap"
        android:onClick="playItsatrap"
        android:layout_margin="16dp"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Leeeeeeeroy"
        android:id="@+id/buttonLeeroy"
        android:onClick="playLeeroy"
        android:layout_margin="16dp"
        android:layout_gravity="center_horizontal" />
</LinearLayout>
